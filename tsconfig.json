{
    "include": [
        "electron/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "svelte"
    ],
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "electron",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es2020"
        ]
    }
}